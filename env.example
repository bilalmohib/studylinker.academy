# StudyLinker Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================
# Clerk Authentication
# ============================================
# Get these from: https://dashboard.clerk.com/last-active?path=api-keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_****
CLERK_SECRET_KEY=sk_test_****

# ============================================
# Supabase Database
# ============================================
# Get these from: https://app.supabase.com/project/_/settings/database
# Connection Pooler URL (recommended for serverless/edge functions)
DATABASE_URL=postgresql://postgres:****@*******.supabase.co:5432/postgres?pgbouncer=true

# Direct Connection URL (for migrations and admin tasks)
# Use this for running migrations, not for application queries
DATABASE_DIRECT_URL=postgresql://postgres:****@******.supabase.co:5432/postgres

# Supabase Project URL and Anon Key (for client-side operations)
NEXT_PUBLIC_SUPABASE_URL=https://*******
NEXT_PUBLIC_SUPABASE_ANON_KEY=****
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=****

# Supabase Service Role Key (for server-side admin operations - keep secret!)
SUPABASE_SERVICE_ROLE_KEY=****

# ============================================
# Google Gemini AI
# ============================================
# Get this from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=****

# ============================================
# Google Meet API (Google Workspace)
# ============================================
# Create a service account in Google Cloud Console and enable Google Meet API
# Get these from: https://console.cloud.google.com/apis/credentials
# Service account email (format: name@project-id.iam.gserviceaccount.com)
GOOGLE_SERVICE_ACCOUNT_EMAIL=****
# Private key from service account JSON (keep the \n characters)
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n****\n-----END PRIVATE KEY-----
# Google Cloud Project ID
GOOGLE_PROJECT_ID=****

# ============================================
# Email Service
# ============================================
# Choose one: "resend", "sendgrid", or "smtp"
EMAIL_PROVIDER=resend
# For Resend (recommended): https://resend.com/api-keys
RESEND_API_KEY=****
# For SendGrid: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=****
# Email sender address
EMAIL_FROM=StudyLinker <noreply@studylinker.academy>

# ============================================
# JazzCash Payment Gateway
# ============================================
# Get these from: https://sandbox.jazzcash.com.pk/Sandbox/Home/GettingStarted
# Generate credentials using the Credential Generator in the sidebar
JAZZCASH_MERCHANT_ID=****
JAZZCASH_PASSWORD=****
JAZZCASH_INTEGRITY_SALT=****
JAZZCASH_RETURN_URL=https://studylinker.academy/api/payment/jazzcash/callback
# Optional: IPN (Instant Payment Notification) URL for payment status updates
JAZZCASH_IPN_URL=https://studylinker.academy/api/payment/jazzcash/ipn

# ============================================
# Application Settings
# ============================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
